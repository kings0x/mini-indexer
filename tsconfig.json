{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],                   
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,                 
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": ["src/*"],
    },
    "useUnknownInCatchVariables": false,
    "types": [],
  },
  "ts-node": {
    "swc": true,
    "require": [
      "tsconfig-paths/register",
      "./src/config/env.ts"
    ],
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "scripts",
    "eslint.config.ts",
  ],
  "exclude": [
    "src/public/*"
  ]
}
